<launch>

  <node pkg="bridge" type="Bridge" name="Bridge" 
        args="$(find bridge)/moos/example/moosconfig.xml $(find bridge)/m_launch/example/bridge.moos" 
        respawn="false" output="screen" />
  <node pkg="posestamped_to_stdmsgs" type="transform" name="transform"/>
  <group ns="husky1">
    <node name="robot_sim1" pkg="posestamped_sim" type="posestamped_sim"/>
    <node name="msg_transform" pkg="posestamped_to_stdmsgs" type="transform" output="screen"/>
  </group>
  <group ns="husky2">
    <node name="robot_sim1" pkg="posestamped_sim" type="posestamped_sim"/>
    <node name="msg_transform" pkg="posestamped_to_stdmsgs" type="transform" output="screen"/>
  </group>
  <group ns="jackal1">
    <node name="robot_sim1" pkg="posestamped_sim" type="posestamped_sim"/>
    <node name="msg_transform" pkg="posestamped_to_stdmsgs" type="transform" output="screen"/>
  </group>
  <group ns="jackal2">
    <node name="robot_sim1" pkg="posestamped_sim" type="posestamped_sim"/>
    <node name="msg_transform" pkg="posestamped_to_stdmsgs" type="transform" output="screen"/>
  </group>
  
</launch>
